<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?android:attr/actionBarSize"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_background"
>

	<!-- xmlns:tools="http://schemas.android.com/tools" -->    
    <LinearLayout
        android:id="@+id/menu_title_region"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:background="@color/locations_dash_background"
    	android:layout_weight="0"
    >
        <ImageView 
	        android:id="@+id/menu_title_thumb"
	       	android:layout_width="40dip"
    		android:layout_height="40dip"
    		android:layout_margin="5dip"
    		android:orientation="vertical"
    		android:layout_weight="0" 
    		android:src="@drawable/locations_locations"
	    />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_gravity="center_vertical"
    		android:orientation="vertical"
    		android:layout_weight="0"
	    >
	        
		    <TextView android:id="@+id/item_name"
		        style="@style/AppBaseTheme.Locations.ItemName"
		        android:textColor="@color/list_item_text_blue"
		        android:text="@string/search_results_title"
		    />
    	</LinearLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
	    android:layout_height="1dip"
	    android:background="@color/list_item_underline_blue"
	    android:layout_weight="0"
    />
    <!-- Optional Sort Bar -->
    <LinearLayout
        android:id="@+id/sort_bar_region"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:background="@color/locations_dash_background"
    	android:layout_weight="0"
    	android:visibility="gone"
    >
        <Spinner 
	        android:id="@+id/sort_spinner"
	        android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    		android:layout_margin="5dip"
    		android:orientation="vertical"
    		android:entries="@array/location_sort_options"
    		android:layout_weight="1"
    		android:layout_gravity="start"
	    />
	    
		<ImageView
		    android:id="@+id/search"
		    android:layout_width="40dip"
    		android:layout_height="40dip"
    		android:layout_weight="0"
    		android:layout_gravity="end|center_vertical"
    		android:src="@drawable/ic_action_library_info"
		/>
		<ImageView
		    android:id="@+id/export"
		    android:layout_width="40dip"
    		android:layout_height="40dip"
    		android:layout_weight="0"
    		android:layout_gravity="end|center_vertical"
    		android:src="@drawable/ic_action_share"
		/>
    </LinearLayout>
    <View 
        android:id="@+id/sort_bar_separator"
        android:layout_width="match_parent"
	    android:layout_height="1dip"
	    android:background="@color/list_item_underline_blue"
	    android:layout_weight="0"
	    android:visibility="gone"
    />
	<ListView
	    android:id="@android:id/list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:background="@color/locations_dash_background">
	</ListView>

</LinearLayout>