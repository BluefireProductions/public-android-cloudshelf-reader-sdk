<?xml version="1.0" encoding="utf-8"?>

<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadius="30dp"
        android:shape="ring"
        android:thickness="16dp"
        android:useLevel="false" >
        <size
            android:height="92dp"
            android:width="92dp" />

        <gradient
            android:centerColor="@color/progress_forground_mid_gradient"
            android:centerY="0.5"
            android:endColor="@color/progress_foreground"
            android:startColor="@color/progress_forground_gone_gradient"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>