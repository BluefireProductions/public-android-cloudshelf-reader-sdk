<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!--style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light"-->
    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!-- Special styled seekbar for our paging control -->
    <style name="AppBaseTheme.SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <!-- Application theme. -->

    <style name="AppTheme.bookInfoTextLarge" parent="android:Widget.TextView">
        <item name="android:textSize">8pt</item>
    </style>
    <style name="AppTheme.bookInfoTextMedium" parent="android:Widget.TextView">
        <item name="android:textSize">6pt</item>
    </style>
    <style name="AppTheme.bookInfoTextSmall" parent="android:Widget.TextView">
        <item name="android:textSize">4pt</item>
    </style>

    <style name="AppBaseTheme.HomeList.ItemDate" parent="android:Widget.TextView">
